<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/name_of_day_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/corner_five"
        app:layout_constraintBottom_toTopOf="@+id/txt_noon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/name_of_day"
            android:textSize="@dimen/city_name"
            android:text="MON"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/two"
            android:layout_marginTop="@dimen/two"
            android:layout_marginStart="@dimen/corner_five"
            android:layout_marginEnd="@dimen/corner_five"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_noon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_condition"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/progress_noon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_night"
        android:layout_marginBottom="@dimen/margin_ten"/>
    <TextView
        android:id="@+id/txt_night"
        android:textSize="@dimen/text_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@+id/txt_noon"
        app:layout_constraintBottom_toTopOf="@+id/progress_night"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/margin_ten"/>

    <ProgressBar
        android:id="@+id/progress_noon"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="@dimen/margin_ten"
        android:layout_height="@dimen/progress_height"
        android:max="45"
        app:layout_constraintBottom_toTopOf="@+id/noon_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/progress_night" />

    <ProgressBar
        android:id="@+id/progress_night"
        style="@style/Widget.ProgressBar.Vertical.Night"
        android:layout_width="@dimen/margin_ten"
        android:layout_height="@dimen/progress_height"
        android:max="45"
        app:layout_constraintBottom_toTopOf="@+id/night_img"
        app:layout_constraintLeft_toRightOf="@+id/progress_noon"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:id="@+id/noon_img"
        android:layout_width="@dimen/threefive"
        android:layout_height="@dimen/threefive"
        android:src="@drawable/sun_icon"
        android:layout_margin="@dimen/corner_five"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/night_img"/>
    <ImageView
        android:id="@+id/night_img"
        android:layout_width="@dimen/threefive"
        android:layout_height="@dimen/threefive"
        android:src="@drawable/icons8_moon_and_stars_48"
        android:layout_margin="@dimen/corner_five"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/noon_img"/>
</android.support.constraint.ConstraintLayout>